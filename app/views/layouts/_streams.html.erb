<div class="streams">
  <span class="sidebar_header">Streams</span>
  <ul class="sidebar_list">
    <% @sidebar_streams.each do |s| %>
      <li class="sidebar_item">
        <%= image_tag s.streamers[0].image_url.to_s, :size => "32x32", :class => "player_thumb" %>
        <%= link_to s.streamers[0].online_name, streamer_path(s.streamers[0]) %>
        <%= image_tag image_path('us-flag.png'), :size => "16x16", :class => "flag_image" %>
        <span class="sidebar_right_float"><%= s.viewer_count %> viewers</span> <br />
        <%= image_tag s.games[0].image_url.to_s, :size => "16x16", :class => "game_image" %>
        <%= link_to s.games[0].name, game_path(s.games[0]) %><br />
      </li>
    <% end %>
  </ul>
</div>