<% @tournaments.each do |t| %>
    <p>
      <%= t.link %><br />
      <%= t.name %> -
      <%= t.game.name %> -
      <%= t.date %> -
      <%= t.region %> -
      $<%= t.prize_pool %><br />
      <%= t.num_competitors unless !t.num_competitors %> competitors
      <%= link_to "Show", tournament_path(t) %>
      <%= link_to "Edit", edit_tournament_path(t) %>
      <%= link_to "Delete", t, method:  :delete,
                  confirm: "You sure?" %>
    </p>
<% end %>

<p><%= link_to "New tournament", new_tournament_path %></p>