<h1>Streams</h1>
<div class="streams">
  <ul class="sidebar-list">
    <% @sidebar_streams.each do |s| %>
      <li>
        <i class="icon-user"></i>
        <%= link_to s.streamers[0].online_name, s.streamers[0] %>
        is streaming
        <%= link_to s.current_game do %>
          <%= image_tag s.current_game.image_url(:small_thumb) %> 
          <%= s.current_game.abbreviation ? s.current_game.abbreviation : s.current_game.name %>
        <% end %>
        <p>
          <span class="text-success"><%= s.viewer_count %> viewers</span>
          <i class="icon-play-circle"></i> <%= link_to "Watch Now", s.link %>
        </p>
      </li>
    <% end %>
  </ul>
</div>