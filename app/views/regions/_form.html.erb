<%= form_for(@region) do |f| %>
  <% if @region.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@region.errors.count, "error") %> prohibited this region from being saved:</h2>

      <ul>
      <% @region.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :image %>
    <br/>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="field">
    <%= f.label :regionable_id %><br />
    <%= f.number_field :regionable_id %>
  </div>
  <div class="field">
    <%= f.label :regionable_type %><br />
    <%= f.text_field :regionable_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
