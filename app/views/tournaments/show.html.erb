<span class="back_link"><%= link_to "<< back", :back %></span>
<%= @tournament.link %><br />
<%= @tournament.name %> -
<%= @tournament.game.name %> -
<%= @tournament.date %> -
<%= @tournament.region %> -
$<%= @tournament.prize_pool %><br />
<%= @tournament.num_competitors unless !@tournament.num_competitors %> competitors
<p>
  <strong>Streams:</strong><br/>
  <% @tournament.events.each do |e| %>
    <% if e.valid? %>
      <%= e.name %><br/>
      <%= e.stream.link %><br/>
      <%= e.event_time %><br/>
      <%= distance_of_time_in_words_hash(Time.now, e.event_time) %>
    <% end %>
  <% end %>
</p>

<p><%= @tournament.streams %></p>

<%= link_to "Edit", edit_tournament_path(@tournament) %>
<%= link_to "Delete", @tournament, method: :delete,
            confirm: "You sure?" %>

<h3>Add new stream</h3>
<%= render 'form', :fields => "event_fields" %>