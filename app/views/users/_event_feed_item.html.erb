  <div class="row listing-header">
    <div class="span9">
      <h2><%= link_to image_tag(feed_item.tournament.game.image_url(:large_thumb), :tooltip => feed_item.tournament.game.name), feed_item.tournament.game %> <%= link_to get_event_name(feed_item), feed_item.tournament %>
      </h2>
    </div>
  </div>
  <div class="row listing-stats">
    <div class="span6">
      <h3><i class="icon-time icon-large"></i> <%= event_time_format feed_item.event_time %></h3>
    </div>
    <div class="span">
      <h3>
        <i class="icon-facetime-video icon-large"></i>
        <%= link_to feed_item.stream.link do %>
          Stream Link
        <% end %>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <p class="listing-description">
        <%= feed_item.description %>
      </p>
    </div>
  </div>

