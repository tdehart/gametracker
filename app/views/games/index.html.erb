<% @games.each do |g| %>
  <div class="row">
      <div class="span6 game-index-item<%= ' game-index-item-last' if g.equal? @games.last %>">
      <%= link_to g do %>
      <h4>
        <%= image_tag g.image_url(:med_thumb) %> <%= g.name %>

      <% end %>
      developed by <%= image_tag g.developer.image_url(:med_thumb) %> <%= g.developer.name %>
    </h4> 
      <div class="row">
        <div class="span6 game-index-stats">
          <span style="margin-right: 20px">
            <i class="icon-trophy"></i> Total Tournaments: <%= g.tournaments.length %>
          </span>
          <i class="icon-money"></i> Total Prizes: <%= humanized_money_with_symbol calculate_total_prizes g.tournaments %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if current_user && current_user.admin? %>
  <p><%= link_to "New game", new_game_path %></p>
<% end %>