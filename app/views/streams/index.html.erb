<h2>Popular Streams</h2>
<div id="popular_streams">
  <% @streams.each do |s| %>
    <div class="popular_stream">
      <%= link_to s.streamers[0] do %>
        <%= image_tag get_image(s.streamers[0]), :size => "32x32", :class => "game_image" %>
        <%= s.streamers[0].online_name %>
        <%= image_tag image_path('us-flag.png'), :size => "16x16", :class => "flag_image" %>
      <% end %>
      <span id="popular_stream_viewers"><%= link_to "#{s.viewer_count} viewers", s.link, :target => "_blank" %></span>
      <br/>
      <%= link_to s.games[0] do %>
        <%= image_tag get_image(s.games[0]), :size => "16x16", :class => "game_image" %>
        <%= s.games[0].name %>
      <% end %>

    </div>

  <% end %>
</div>

<p><%= link_to "New stream", new_stream_path %></p>