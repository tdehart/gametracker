<div class="row">
  <div class="span9">
    <span class="listing-submit-info">
      Submitted by <%= link_to @submitter.name, @submitter %> 
      <span class="submit-info-time"><%= time_ago_from_now(@tournament.created_at) %></span>
    </span>
    
    <h1>
      <%= link_to image_tag(@tournament.game.image_url(:large_thumb)), @tournament.game %> 
      <%= @tournament.name %> 
      <%= render 'follow_form' %>
    </h1>
  </div>
  
</div>

<div class="row">
  <div class="span3">
    <h2><i class="icon-calendar icon-large"></i> <%= @tournament.start_date.strftime("%m-%d-%Y") %></h2>
  </div>
  <div class="span3">
    <h2><i class="icon-money icon-large"></i> <%= number_to_currency(@tournament.prize_pool, :precision => 0) %></h2>
  </div>
  <div class="span">
    <h2><i class="icon-group icon-large"></i> <%= @tournament.num_competitors %> players</h2>
  </div>
</div>

<div class="row">
  <div class="span9">
    <p><%= @tournament.description %></p>
  </div>
</div>

<div class="row">
  <div class="span6">
    <ul class="tournament-event-list">
      <% @events.each do |e| %>
      <li>
        <h3><%= e.name %></h3>
        <h4>Event Date: <em><%= event_time_format e.event_time %></em></h4>
        <h4>Stream Link: <%= link_to e.stream.link, e.stream.link, :target => "_blank" %></h4>
        <p><%= e.description %></p>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<% if current_user.admin? %>
  <p>
    <%= link_to "Edit", edit_tournament_path(@tournament) %>
    <%= link_to "Delete", @tournament, method: :delete,
                confirm: "You sure?" %>
  </p>
<% end %>